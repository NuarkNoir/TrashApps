<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_margin="8dp"
	app:cardCornerRadius="8dp"
	app:cardBackgroundColor="#e0e0e0"
	app:cardUseCompatPadding="true">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:padding="16dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/appIcon"
				android:layout_width="64dp"
				android:layout_height="64dp"
				app:srcCompat="@color/deselected_color" />

			<View
				android:layout_width="8dp"
				android:layout_height="match_parent"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<TextView
					android:id="@+id/title"
					android:layout_width="match_parent"
					android:layout_height="24dp"
					android:text="Way down we go"
					android:textColor="#000000"
					android:textSize="16dp" />

				<TextView
					android:id="@+id/androver"
					android:layout_width="match_parent"
					android:layout_height="35dp"
					android:text="'cause they will run you down"
					android:textColor="#00CC00" />
			</LinearLayout>
		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="8dp"/>

		<com.adroitandroid.chipcloud.ChipCloud
			android:id="@+id/chip_cloud"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:allCaps="true"
			app:minHorizontalSpacing="4dp"
			app:selectMode="none"
			app:textSize="10sp"
			app:verticalSpacing="4dp" />

	</LinearLayout>
</android.support.v7.widget.CardView>

